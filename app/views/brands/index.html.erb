<% content_for :title do %>
  Brands
<% end %>
<div class="columns">
  <div class="column is-half">
    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @brands.each do |brand| %>
          <tr>
            <td><%= brand.name %></td>
            <td><%= link_to 'Edit', edit_brand_path(brand) %></td>
            <% if brand.vehicles.empty? %>
              <td><%= link_to 'Destroy', brand, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <% else %>
              <td>Brand used in <%= brand.vehicles.count%> vehicles</td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
