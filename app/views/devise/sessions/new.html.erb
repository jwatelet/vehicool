<div class="hero is-fullheight is-link">
  <div class="navbar-brand">
    <div class="navbar-item">
      <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 48 48"><title>ic_directions_car_48px</title>
        <path fill="#FFFFFF" d="M37.84 12.02C37.43 10.84 36.31 10 35 10H13c-1.31 0-2.43.84-2.84 2.02L6 24v16c0 1.1.9 2 2 2h2c1.11 0 2-.9 2-2v-2h24v2c0 1.1.9 2 2 2h2c1.11 0 2-.9 2-2V24l-4.16-11.98zM13 32c-1.66 0-3-1.34-3-3s1.34-3 3-3 3 1.34 3 3-1.34 3-3 3zm22 0c-1.66 0-3-1.34-3-3s1.34-3 3-3 3 1.34 3 3-1.34 3-3 3zM10 22l3-9h22l3 9H10z"></path>
      </svg>
      <span class="has-text-weight-bold is-size-4 ml-4">Vehicool</span>
    </div>
  </div>
  <div class="hero-body">
    <div class="container has-text-centered">
      <% if notice.present? %>
        <div class="notification column is-info is-4 is-offset-4" id="notice"><%= notice %>
        </div>
      <% end %>

      <% if alert.present? %>
        <div class="notification column is-danger is-4 is-offset-4" id="notice"><%= alert %>
        </div>
      <% end %>
      <div class="column is-4 is-offset-4">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "box"}) do |f| %>
          <div class="field">
            <%= f.label :email, class: "label"%>
            <div class="control has-icons-left">
              <%= f.email_field :email, class: "input", autofocus: true, autocomplete: "email", placeholder: "e.g. bobsmith@gmail.com" %>
              <span class="icon is-small is-left">
                <i class="fa fa-envelope"></i>
              </span>
            </div>
          </div>

          <div class="field">
            <%= f.label :password, class: "label"%>
            <div class="control has-icons-left">
              <%= f.password_field :password, class: "input", autocomplete: "current-password" %>
              <span class="icon is-small is-left">
                <i class="fa fa-lock"></i>
              </span>
            </div>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me, class: "checkbox" %>
              <%= f.label :remember_me %>
            </div>
          <% end %>

          <div class="actions">
            <%= f.submit "Log in", class: "button is-success" %>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
